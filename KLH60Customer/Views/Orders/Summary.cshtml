@model Order

@{
    ViewData["Title"] = "Details";
}

<h1>Order Details</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateFulfiled)
        </dt>
        <dd class="col-sm-10">
            @if (Model.DateFulfiled.Value.Date.Year == 1970)
            {
                <span>Order has not been fulfilled yet.</span>
            }
            else
            {
                @Html.DisplayFor(model => model.DateFulfiled)
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Model.Total.Value.ToString("C", CultureInfo.CurrentCulture)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Taxes)
        </dt>
        <dd class="col-sm-10">
            @Model.Taxes.Value.ToString("C", CultureInfo.CurrentCulture)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="CheckCreditCard" asp-route-orderId="@Model.OrderId">Place Order</a> |
    <a asp-action="Index">Back to List</a>
</div>