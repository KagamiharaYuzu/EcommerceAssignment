@model Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Description</h4>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-2 border-primary">
            <div class="card mb-12 product-card">
                <partial name="_productDetails" model="Model" />
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>