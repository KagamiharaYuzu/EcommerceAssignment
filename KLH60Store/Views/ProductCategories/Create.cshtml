@model ProductCategory

@{
    ViewData["Title"] = "Create";
    string err = TempData["Err"] is not null ? TempData["Err"].ToString() : "";
}

<h1>Creating a new Category</h1>

<p class="global-err">@err</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProdCat" class="control-label"></label>
                <input asp-for="ProdCat" class="form-control" />
                <span asp-validation-for="ProdCat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
